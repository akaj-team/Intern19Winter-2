<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:drawableLeft="@mipmap/ic_back"
            android:drawablePadding="7dip"
            android:text="@string/editProfileActivityBackButtonTitle"
            android:textColor="@color/grayD8D8D8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/editProfileActivityTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize24"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/btBack"
            app:layout_constraintTop_toBottomOf="@id/btBack" />
        
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="22dp"
            android:src="@mipmap/bg_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

        <TextView
            android:id="@+id/btEditProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/editProfileActivityEditProfilePictureButtonTitle"
            android:textColor="@color/green30BE76"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatar" />

        <TextView
            android:id="@+id/tvFullNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="47dp"
            android:text="@string/editProfileActivityFullNameHeader"
            android:textColor="@color/grayD8D8D8"
            android:textSize="@dimen/textSize14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btEditProfilePicture" />

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activityControlMargin"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/activityControlMargin"
            android:inputType="textEmailAddress"
            android:text="@string/editProfileActivityFullNamePlaceHolder"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFullNameHeader"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/tvBioHeader"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="23dp"
            android:text="@string/editProfileActivityBioHeader"
            android:textColor="@color/grayD8D8D8"
            android:textSize="@dimen/textSize14"
            app:layout_constraintLeft_toLeftOf="@id/etFullName"
            app:layout_constraintTop_toBottomOf="@id/etFullName" />

        <EditText
            android:id="@+id/etBio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activityControlMargin"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/activityControlMargin"
            android:inputType="textEmailAddress"
            android:text="@string/editProfileActivityBioPlaceHolder"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBioHeader"
            tools:ignore="Autofill,LabelFor"/>

        <TextView
            android:id="@+id/tvPrivateInformation"
            app:layout_constraintTop_toBottomOf="@+id/etBio"
            android:layout_marginTop="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/editProfileActivityPrivateInformationHeader"/>

        <TextView
            android:id="@+id/tvEmailHeader"
            android:layout_height="22dp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvPrivateInformation"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="25dp"
            android:text="@string/editProfileActivityEmailAddress"
            android:textColor="@color/grayD8D8D8"
            android:textSize="@dimen/textSize14"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvEmailHeader"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/activityControlMargin"
            android:layout_marginRight="@dimen/activityControlMargin"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            android:text="@string/editProfileActivityEmailAddressPlaceHolder"
            tools:ignore="Autofill,LabelFor"/>

        <TextView
            android:id="@+id/tvPhoneHeader"
            android:layout_height="22dp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            android:layout_marginTop="23dp"
            app:layout_constraintLeft_toLeftOf="@id/etEmail"
            android:text="@string/editProfileActivityPhoneHeader"
            android:textColor="@color/grayD8D8D8"
            android:textSize="@dimen/textSize14"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvPhoneHeader"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/activityControlMargin"
            android:layout_marginRight="@dimen/activityControlMargin"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            android:text="@string/editProfileActivityPhonePlaceHolder"
            tools:ignore="Autofill,LabelFor"/>

        <TextView
            android:id="@+id/btSaveProfile"
            android:layout_height="50dp"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/etPhone"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/activityControlMargin"
            android:layout_marginLeft="@dimen/activityControlMargin"
            android:layout_marginRight="@dimen/activityControlMargin"
            android:background="@drawable/round_button"
            android:text="@string/editProfileActivitySaveProfileButtonTitle"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
