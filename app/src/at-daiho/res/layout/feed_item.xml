<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightLine"
        android:background="@drawable/line"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/feed_item_avatar_size"
        android:layout_height="@dimen/feed_item_avatar_size"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOwnerUsername"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        tools:text="Dai Ho V." />

    <ImageView
        android:id="@+id/imgFeed"
        android:layout_width="@dimen/width_0"
        android:layout_height="@dimen/feed_item_image_height"
        android:layout_marginTop="@dimen/margin_8"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_feed1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar" />

    <ImageView
        android:id="@+id/imgBtnLike"
        android:layout_width="@dimen/feed_item_button_size"
        android:layout_height="@dimen/feed_item_button_size"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:src="@mipmap/ic_like"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgFeed" />

    <ImageView
        android:id="@+id/imgBtnComment"
        android:layout_width="@dimen/feed_item_button_size"
        android:layout_height="@dimen/feed_item_button_size"
        android:layout_marginLeft="@dimen/margin_20"
        android:src="@mipmap/ic_comment"
        app:layout_constraintStart_toEndOf="@id/imgBtnLike"
        app:layout_constraintTop_toTopOf="@id/imgBtnLike" />

    <ImageView
        android:id="@+id/imgBtnShare"
        android:layout_width="@dimen/feed_item_button_size"
        android:layout_height="@dimen/feed_item_button_size"
        android:layout_marginLeft="@dimen/margin_20"
        android:src="@mipmap/ic_share"
        app:layout_constraintStart_toEndOf="@id/imgBtnComment"
        app:layout_constraintTop_toTopOf="@id/imgBtnLike" />

    <TextView
        android:id="@+id/tvLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightLine"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/line"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgBtnShare" />

    <ImageView
        android:id="@+id/imgFavorite"
        android:layout_width="@dimen/feed_item_favorite_icon_size"
        android:layout_height="@dimen/feed_item_favorite_icon_size"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_8"
        android:gravity="center"
        android:src="@mipmap/ic_like_black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLine"
        tools:text="12 Likes" />

    <TextView
        android:id="@+id/tvNumberOfLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgFavorite"
        app:layout_constraintStart_toEndOf="@+id/imgFavorite"
        app:layout_constraintTop_toTopOf="@+id/imgFavorite"
        tools:text="12 Likes" />

    <TextView
        android:id="@+id/tvCommentOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/imgBtnLike"
        app:layout_constraintTop_toBottomOf="@+id/tvNumberOfLike"
        tools:text="Nich_Evans" />

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCommentOwner"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Comment comment" />
</androidx.constraintlayout.widget.ConstraintLayout>

