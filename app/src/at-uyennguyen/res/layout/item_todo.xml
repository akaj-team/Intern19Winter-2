<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/tvTodo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgDoneTodo"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_done_todo"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgEditTodo"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_edit_todo"
        app:layout_constraintEnd_toStartOf="@id/imgDoneTodo" />

    <ImageView
        android:id="@+id/imgTrushTodo"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_trash"
        app:layout_constraintEnd_toStartOf="@id/imgEditTodo" />

</androidx.constraintlayout.widget.ConstraintLayout>
