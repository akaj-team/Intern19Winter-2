<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/myKitchen"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="49dp"
        android:fontFamily="Nunito-Bold"
        android:text="@string/my_kitchen"
        android:textColor="#030F09"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginRight="80dp" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="50dp"
        android:layout_height="19dp"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintStart_toEndOf="@id/icon"
        android:text="@string/settings"
        android:textColor="#030F09"
        android:textSize="14sp"
        android:fontFamily="Nunito-Regular" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintLeft_toLeftOf="@id/myKitchen"
        app:layout_constraintTop_toBottomOf="@id/myKitchen"
        android:layout_marginTop="30dp"
        android:src="@drawable/avatarman" />

    <TextView
        android:id="@+id/name"
        android:layout_width="80dp"
        android:layout_height="21dp"
        android:text="@string/nick_evans"
        android:textColor="#030F09"
        android:textSize="16sp"
        android:fontFamily="Nunito-Bold"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="95dp"
        android:layout_height="19dp"
        android:text="@string/potato_master"
        android:fontFamily="Nunito-Regular"
        android:textColor="#606060"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="@+id/name" />

    <TextView
        android:id="@+id/follow"
        android:layout_width="90dp"
        android:layout_height="19dp"
        android:text="@string/_584_followers"
        android:textSize="14sp"
        android:textColor="#606060"
        android:fontFamily="Nunito-Regular"
        app:layout_constraintLeft_toLeftOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@id/address"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="19dp"
        android:text="@string/_23k_likes"
        android:textSize="14sp"
        android:textColor="#606060"
        android:fontFamily="Nunito-Regular"
        app:layout_constraintStart_toEndOf="@+id/follow"
        app:layout_constraintTop_toTopOf="@+id/follow"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:id="@+id/penciledit"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/edit"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        app:layout_constraintLeft_toLeftOf="@id/avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/black" />


</androidx.constraintlayout.widget.ConstraintLayout>