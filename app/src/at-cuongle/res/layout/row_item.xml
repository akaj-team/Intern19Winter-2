<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="@dimen/width_0_dp"
        android:layout_height="@dimen/height_350dp"
        android:layout_marginTop="@dimen/margin_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar" />

    <ImageView
        android:id="@+id/imgComment"
        android:layout_width="@dimen/width_30dp"
        android:layout_height="@dimen/width_30dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@+id/tgLike"
        app:layout_constraintTop_toTopOf="@+id/tgLike" />

    <ImageView
        android:layout_width="@dimen/width_30dp"
        android:layout_height="@dimen/width_30dp"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toEndOf="@+id/imgComment"
        app:layout_constraintTop_toTopOf="@+id/tgLike" />

    <TextView
        android:id="@+id/tvNameTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar" />

    <TextView
        android:id="@+id/tvTotalLiked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_favorite_black"
        android:fontFamily="Nunito-Regular"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/vLineTop" />

    <TextView
        android:id="@+id/tvNameBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalLiked" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_16dp"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/tvNameBottom" />

    <ToggleButton
        android:id="@+id/tgLike"
        android:layout_width="@dimen/width_30dp"
        android:layout_height="@dimen/width_30dp"
        android:layout_marginTop="@dimen/margin_top_8dp"
        android:background="@drawable/button_favorite"
        android:checked="false"
        android:stateListAnimator="@null"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/imgFood" />

    <View
        android:id="@+id/vLineTop"
        android:layout_width="@dimen/width_0_dp"
        android:layout_height="@dimen/view_line_1_dp"
        android:layout_marginTop="@dimen/margin_top_4dp"
        android:background="@color/color_gray"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/tgLike" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guide_begin_24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/guide_end_12dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/width_50dp"
        android:layout_height="@dimen/height_50dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
