<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/imgMusic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_music"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameMusic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@+id/imgMusic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMusic" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#80828A"
        app:layout_constraintBottom_toBottomOf="@+id/imgMusic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgMusic" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#80828A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMusic"
        app:layout_constraintTop_toTopOf="@+id/tvNameMusic" />
</androidx.constraintlayout.widget.ConstraintLayout>