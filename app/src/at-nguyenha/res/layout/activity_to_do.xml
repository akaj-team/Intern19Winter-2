<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerToDo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="asiantech.internship.summer.savedata.activity.ToDoActivity">

    <LinearLayout
        android:id="@+id/layoutToDo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpToDo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.3" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabToDo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/textview_color_account"
            app:tabIndicatorGravity="stretch"
            app:tabMode="fixed"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/textview_textcolor_white"
            app:tabTextColor="@color/textview_color_account" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:scaleType="centerCrop">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
