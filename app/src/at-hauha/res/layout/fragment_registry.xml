<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/imgBackGround"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_284"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvStartFromScratch"
            android:layout_width="@dimen/width_304"
            android:layout_height="@dimen/height_64"
            android:layout_marginTop="@dimen/heigth_32"
            android:text="@string/textview_start_nfrom_scratch"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imgBack"
            app:layout_constraintTop_toBottomOf="@+id/imgBack" />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/width_92"
            android:layout_height="@dimen/heigth_32"
            android:layout_marginStart="@dimen/margin_start_40dp"
            android:layout_marginTop="@dimen/top_72"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvContinue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_24"
            android:layout_marginTop="@dimen/margin_top_20"
            android:text="@string/textview_create_account_to_continue"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintStart_toStartOf="@+id/imgBack"
            app:layout_constraintTop_toBottomOf="@+id/imgBackGround" />

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_40dp"
            android:layout_marginTop="@dimen/margin_top_20"
            android:text="@string/textview_fullname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContinue" />

        <EditText
            android:inputType="text"
            android:hint="@string/edit_hint_your_name"
            android:id="@+id/edtFullName"
            android:layout_width="@dimen/width_324"
            android:layout_height="@dimen/height_64"
            android:text="@string/edittext_fullname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFullName"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/tvBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_40dp"
            android:layout_marginTop="@dimen/margin_top_20"
            android:text="@string/textview_email_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtFullName" />

        <EditText
            android:inputType="textEmailAddress"
            android:hint="@string/edittext_hint_email_address"
            android:id="@+id/edtEmail"
            android:layout_width="@dimen/width_324"
            android:layout_height="@dimen/height_64"
            android:text="@string/edittext_user_email_com"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBio"
            tools:ignore="Autofill" />


        <TextView
            android:id="@+id/tvPrivateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_40dp"
            android:layout_marginTop="@dimen/margin_top_20"
            android:text="@string/textview_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

        <EditText
            android:hint="@string/edittext_hint_password"
            android:id="@+id/edtPassword"
            android:layout_width="@dimen/width_324"
            android:layout_height="@dimen/height_64"
            android:inputType="textPassword"
            android:text="@string/edittext_12345678"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPrivateInfo"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/tvCreateAccount"
            android:layout_width="@dimen/width_324"
            android:layout_height="@dimen/height_52"
            android:layout_marginTop="@dimen/margin_top_20"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="@string/textview_create_account"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

        <TextView
            android:id="@+id/tvCreateAnAccount"
            android:layout_width="@dimen/width_172"
            android:layout_height="@dimen/height_24"
            android:layout_marginTop="@dimen/margin_top_12"
            android:gravity="center"
            android:text="@string/textview_already_have_an_account"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCreateAccount" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="@dimen/width_140"
            android:layout_height="@dimen/heigth_32"
            android:gravity="center"
            android:text="@string/textview_login_here"
            android:textColor="@color/color_green"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/margin_start_40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCreateAnAccount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>